#include <stdio.h>

int main() {
    int num1, num2, num3, num4;
    int suma, producto;

    // Solicitar al usuario que ingrese cuatro números
    printf("Ingrese el primer numero: ");
    scanf("%d", &num1);
    printf("Ingrese el segundo numero: ");
    scanf("%d", &num2);
    printf("Ingrese el tercer numero: ");
    scanf("%d", &num3);
    printf("Ingrese el cuarto numero: ");
    scanf("%d", &num4);

    // Sumar los dos primeros números
    suma = num1 + num2;

    // Multiplicar el tercer número por el cuarto
    producto = num3 * num4;

    // Mostrar los resultados
    printf("La suma de los dos primeros numeros es: %d\n", suma);
    printf("El producto del tercer y cuarto numero es: %d\n", producto);

    return 0;
}