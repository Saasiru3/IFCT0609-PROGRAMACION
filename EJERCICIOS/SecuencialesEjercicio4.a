/*Realizar un programa que lea cuatro valores num√©ricos e informar su suma y
promedio*/

#include<stdio.h>/*Que es la biblioteca standar de entrada y salida*/
                /*printf , scanf, puts y gets*/
int main() {    /* es la declaracion de la funcion principal*/ /*int devolvera valor entero*/

int a, b, c, d; 
int suma;   /*definir tipo variable, int, float, char*/
float promedio;         /*definimos tipo de variable flotante para decimales*/

a=0, b=0, c=0, d=0, suma=0, promedio=0;

printf ("Introduzca los cuatro numeros: \n"); /*pedir los datos al medio*/
scanf ("%d",&a);
scanf ("%d",&b);
scanf ("%d",&c);
scanf ("%d",&d);

suma= (a+b+c+d);
promedio= suma/4;   /*Operaciones +, -, *, /, % (modulo), ==, etc*/

printf ("la suma de los cuatro numeros es: %d\n", suma);
scanf ("El promedio de los numeros es: %d\n", promedio);        /*Mostramos los resultados*/

return 0;


}
